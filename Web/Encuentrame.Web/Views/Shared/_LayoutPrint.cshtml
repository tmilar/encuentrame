@using Encuentrame.Web
@using Encuentrame.Web.Helpers

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - @Translations.ApplicationName</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
   
<div class="container-fluid body-content @Html.ControllerName() @Html.ActionName() ">
    
    @RenderBody()

    <footer>
        <hr />
        <p>&copy; @DateTime.Now.Year - Encuentrame @Translations.ApplicationName</p>
    </footer>
</div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/underscore")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/moment")
    <script src="@Scripts.Url(@"~/scripts/app/appInit.js")" type="text/javascript"></script>
    @RenderSection("scripts", required: false)
    <script src="@Scripts.Url(@"~/scripts/app/print.js")" type="text/javascript"></script>
</body>
</html>
