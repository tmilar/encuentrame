@using Encuentrame.Web
@using Encuentrame.Support
@model Encuentrame.Web.Models.Homes.HomeModel
@{
    ViewBag.Title = Translations.HomeTitle; ;
}
@section scripts
{

    <script src="@Scripts.Url(@"~/scripts/Chart.min.js")" type="text/javascript"></script>
    <script src="@Scripts.Url(@"~/scripts/app/controllers/Homes/Dashboard.js")" type="text/javascript"></script>
}


<div class="row margin-top-l">
    <div class="col-lg-3 col-md-6">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <span class="glyphicon glyphicon-pushpin big-icon" aria-hidden="true"></span>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge">@Model.PeopleThatIAmTracking</div>
                        <div>@Translations.PeopleThatIAmTracking</div>
                    </div>
                </div>
            </div>
            <a href="@Url.Action("Index", "ManageEvent")">
                <div class="panel-footer">
                    <span class="pull-left">@Translations.ViewDetails</span>
                    <span class="pull-right glyphicon glyphicon-circle-arrow-right" aria-hidden="true"></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>
    <div class="col-lg-3 col-md-6">
        <div class="panel panel-green">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <span class="glyphicon glyphicon-stats big-icon" aria-hidden="true"></span>
                    </div>
                    <div class="col-xs-9 text-right">

                        <div class="huge">@Model.PeopleInEvents</div>
                        <div>@Translations.PeopleInEvents</div>

                    </div>
                </div>
            </div>
            <a href="@Url.Action("Index", "ManageEvent")">
                <div class="panel-footer">
                    <span class="pull-left">@Translations.ViewDetails</span>
                    <span class="pull-right glyphicon glyphicon-circle-arrow-right" aria-hidden="true"></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>
    <div class="col-lg-3 col-md-6">
        <div class="panel panel-red">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <span class="glyphicon glyphicon-bullhorn big-icon" aria-hidden="true"></span>
                    </div>
                    <div class="col-xs-9 text-right">

                        <div class="huge">@Model.EventsInEmergency</div>
                        <div>@Translations.EventsInEmergency</div>

                    </div>
                </div>
            </div>
            <a href="@Url.Action("Index", "ManageEvent")">
                <div class="panel-footer">
                    <span class="pull-left">@Translations.ViewDetails</span>
                    <span class="pull-right glyphicon glyphicon-circle-arrow-right" aria-hidden="true"></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>
    <div class="col-lg-3 col-md-6">
        <div class="panel panel-yellow">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <span class="glyphicon glyphicon-question-sign big-icon" aria-hidden="true"></span>
                    </div>
                    <div class="col-xs-9 text-right">


                        <div class="huge">@Model.PeopleWithoutAnswer</div>
                        <div>@Translations.PeopleWithoutAnswer</div>

                    </div>
                </div>
            </div>
            <a href="@Url.Action("Index", "ManageEvent")">
                <div class="panel-footer">
                    <span class="pull-left">@Translations.ViewDetails</span>
                    <span class="pull-right glyphicon glyphicon-circle-arrow-right" aria-hidden="true"></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-6 col-xs-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">@Translations.AllEventsVsInEmergencyEvents</h3>
            </div>
            <div class="panel-body">
                <canvas id="eventsAlongTheTimeChart" data-url="@Url.Action("EventsAlongTheTime")"  class="chart"></canvas>
            </div>
        </div>
    </div>
    <div class="col-lg-6 col-xs-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">@Translations.EventsByStatus</h3>
            </div>
            <div class="panel-body">
                <canvas id="eventsByStatus" data-url="@Url.Action("EventsByStatus")" class="chart"></canvas>
                <div id="eventsByStatusLegend" class="pie-chart-legend"></div>
            </div>
        </div>
    </div>
</div>

